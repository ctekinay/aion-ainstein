# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_GRPC_URL=localhost:50051
WEAVIATE_IS_LOCAL=True

# LLM Provider Configuration
# Options: "ollama" (default, local) or "openai" (cloud)
LLM_PROVIDER=ollama

# Ollama Configuration (default - local LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=alibayram/smollm3:latest
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# OpenAI Configuration (alternative - cloud LLM)
# Only needed if LLM_PROVIDER=openai
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini
# Custom API endpoint (optional) â€” for GitHub Models, Azure OpenAI, etc.
# OPENAI_BASE_URL=https://models.github.ai/inference

# Data paths (relative to project root)
DATA_PATH=./data
RDF_PATH=./data/esa-skosmos
MARKDOWN_PATH=./data/esa-main-artifacts/doc
POLICY_PATH=./data/do-artifacts/policy_docs
PRINCIPLES_PATH=./data/do-artifacts/principles

# Logging
LOG_LEVEL=INFO

# GitHub Configuration (for private repository access)
# Use a Personal Access Token (PAT) with repo scope for cloning
# Generate at: https://github.com/settings/tokens
# GITHUB_TOKEN=ghp_your_personal_access_token_here
#
# Alternative: Use SSH key authentication
# 1. Generate SSH key: ssh-keygen -t ed25519 -C "your_email@company.com"
# 2. Add public key to GitHub: Settings > SSH and GPG keys > New SSH key
# 3. Clone with SSH: git clone git@github.com:Alliander/esa-ainstein-artifacts.git
